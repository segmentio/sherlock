#!/usr/bin/env node

/**
 * Dependencies.
 */

var app = module.exports = require('..');
var program = require('commander');

/**
 * CLI.
 */

program
  .option('-p, --port <number>', 'port to listen on', 8001)
  .parse(process.argv);

/**
 * Configuration.
 */

app.name = 'Analytics Detective';
if (process.env.PORT) app.port = process.env.PORT;

/**
 * Start.
 */

app.listen(app.port, function () {
  console.log('\n %s listening at http://localhost:%d/\n', app.name, app.port);
});
